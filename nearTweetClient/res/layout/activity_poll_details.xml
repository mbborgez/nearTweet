<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PollDetailsActivity" >

    <!-- Title -->
    <TextView
        android:id="@+id/poll_detailsTitle_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pollDetails_vote_options"
        android:layout_alignParentTop="true"
        android:text="@string/pollDetailsTitle"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <!-- Description of the poll -->
    <TextView
        android:id="@+id/poll_description_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/poll_detailsTitle_textView"
        android:layout_alignRight="@+id/pollDetails_vote_options"
        android:layout_below="@+id/poll_detailsTitle_textView"
        android:layout_marginTop="32dp"
        android:text="@string/poll_description_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!-- Poll options in which the user can vote -->
    <RadioGroup
        android:id="@+id/pollDetails_vote_options"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/poll_description_textView"
        android:orientation="vertical" />

    <!-- Submit the vote of the user -->

	<Button
	    android:id="@+id/poll_submitVote_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/pollDetails_vote_options"
	    android:layout_alignParentBottom="true"
	    android:layout_alignRight="@+id/poll_description_textView"
	    android:text="@string/poll_submit_vote_button" />
    
</RelativeLayout>